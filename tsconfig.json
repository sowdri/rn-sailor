{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "allowJs": true
  },
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules",
    "__tests__",
    "storybook",
    "examples",
    "index.js"
  ],
  "compileOnSave": true
}
